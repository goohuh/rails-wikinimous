<h1>Articles</h1>

<ul>
  <% @articles.each do |article| %>
    <li>
      <p>
        <%= link_to article_path(article) do %>
          <%= article.title %>
        <% end %>
        - <%= link_to "Delete article", article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </p>
    </li>
  <% end %>
</ul>
<p><%= link_to "Add a new article", new_article_path %></p>
